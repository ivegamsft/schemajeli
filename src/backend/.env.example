# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/schemajeli?schema=public"

# Azure Entra ID Authentication
AZURE_TENANT_ID="your-tenant-id-here"
AZURE_CLIENT_ID="your-client-id-here"
AZURE_CLIENT_SECRET="your-client-secret-here"
AZURE_OBO_SCOPES="https://graph.microsoft.com/User.Read"

# JWT Configuration (for Entra ID token validation)
JWT_AUDIENCE="api://your-client-id-here"
JWT_ISSUER="https://sts.windows.net/your-tenant-id-here/"
JWT_JWKS_URI="https://login.microsoftonline.com/your-tenant-id-here/discovery/v2.0/keys"

# RBAC Group Mapping (Azure AD group object IDs)
RBAC_GROUP_ADMIN=""
RBAC_GROUP_MAINTAINER=""
RBAC_GROUP_VIEWER=""

# Mock Roles (comma-separated) - used when token has no roles/groups (dev only)
RBAC_MOCK_ROLES="Viewer"

# Server Configuration
NODE_ENV="development"
PORT=3000
API_PREFIX="/api/v1"

# CORS Configuration
CORS_ORIGIN="http://localhost:5173"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL="info"
LOG_FILE_PATH="logs/app.log"

# Azure Application Insights (Optional)
APPINSIGHTS_INSTRUMENTATION_KEY=""

# Prisma
PRISMA_QUERY_LOG=false
